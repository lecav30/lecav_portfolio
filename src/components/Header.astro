---
import MenuIcon from "astro-feather-icons/Menu";
import ThemeIcon from "./ThemeIcon.astro";
import { Image } from "astro:assets";
import Laptop from "../assets/astro/Laptop.astro";
---

<div class="flex gap-4 items-center">
  <a href="#hero">
    <Laptop />
  </a>
</div>
<MenuIcon class="bars block cursor-pointer md:hidden" />
<nav
  id="navbar"
  class="navbar absolute top-20 left-0 h-0 w-screen overflow-hidden md:bg-inherit md:static md:w-auto md:h-auto md:overflow-visible"
>
  <ul
    class="flex flex-col items-center md:opacity-100 md:flex-row gap-16 font-semibold scroll-smooth"
  >
    <li>
      <a class="scrollto active mb-5 md:mb-0" href="#hero">Home</a>
    </li>
    <li>
      <a class="scrollto mb-5 md:mb-0" href="#services">Services</a>
    </li>
    <li>
      <a class="scrollto mb-5 md:mb-0" href="#experience">Experience</a>
    </li>
    <li>
      <a class="scrollto mb-5 md:mb-0" href="#projects">Projects</a>
    </li>
    <li><a class="scrollto mb-5 md:mb-0" href="#contact">Contact</a></li>
    <li>
      <ThemeIcon />
    </li>
  </ul>
</nav>

<style>
  .navbar {
    background-color: white;
  }

  .navbar ul li a.active,
  .navbar ul li a:hover {
    border-bottom: 0.2rem solid var(--main-color);
    border-radius: 0 0 2px 2px;
  }

  .navbar ul li a {
    transition: border-bottom 0.2s ease-out;
  }

  @media (max-width: 768px) {
    @keyframes show-navbar {
      0% {
        height: 0;
      }
      100% {
        height: 100vh;
      }
    }

    @keyframes hide-navbar {
      0% {
        height: 100vh;
      }
      100% {
        height: 0;
      }
    }

    :global(.dark) .navbar {
      background-color: #131313;
    }

    .header.show-nav {
      backdrop-filter: blur(0);
      background-color: #fff;
    }

    .navbar.hide {
      animation: hide-navbar 0.3s ease-in-out;
    }

    .navbar.active {
      height: 100vh;
      animation: show-navbar 0.3s ease-in-out;
    }

    .navbar.active ul {
      opacity: 1;
    }
  }
</style>
