---
import MenuIcon from "astro-feather-icons/Menu";
---

<div class="flex gap-4 items-center">
  <a href="#hero">
    <img src="src/assets/svg/laptop.svg" alt="Laptop" class="w-10" />
  </a>
  <a
    href="/curriculum"
    target="_blank"
    id="resume"
    class="bg-[var(--main-color)] text-white text-xl font-bold px-3 py-1 border border-black rounded-3xl hidden md:block"
    >Résumé</a
  >
</div>
<MenuIcon class="bars block cursor-pointer md:hidden" />
<nav
  id="navbar"
  class="navbar absolute top-20 left-0 h-0 w-screen overflow-hidden bg-white md:bg-inherit md:static md:w-auto md:h-auto md:overflow-visible"
>
  <ul
    class="flex flex-col items-center justify-around gap-8 md:opacity-100 md:flex md:flex-row md:gap-20 font-semibold text-xl scroll-smooth"
  >
    <li>
      <a class="scrollto active mb-5 md:mb-0" href="#hero">Home</a>
    </li>
    <li>
      <a class="scrollto mb-5 md:mb-0" href="#services">Services</a>
    </li>
    <li><a class="scrollto mb-5 md:mb-0" href="#contact">Contact</a></li>
  </ul>
</nav>

<style>
  #resume {
    -webkit-text-stroke: 0.5px black;
  }

  .navbar ul li a.active,
  .navbar ul li a:hover {
    border-bottom: 0.2rem solid var(--main-color);
    border-radius: 0 0 2px 2px;
  }

  .navbar ul li a {
    transition: border-bottom 0.2s ease-out;
  }

  @media (max-width: 768px) {
    @keyframes show-navbar {
      0% {
        height: 0;
      }
      100% {
        height: 100vh;
      }
    }

    @keyframes hide-navbar {
      0% {
        height: 100vh;
      }
      100% {
        height: 0;
      }
    }

    .header.show-nav {
      backdrop-filter: blur(0);
      background-color: #fff;
    }

    .navbar.hide {
      animation: hide-navbar 0.3s ease-in-out;
    }

    .navbar.active {
      height: 100vh;
      animation: show-navbar 0.3s ease-in-out;
    }

    .navbar.active ul {
      opacity: 1;
    }
  }
</style>
