---
export interface Props {
  title: string;
  imageUrl: string;
  altImage: string;
  skills: string[];
}

const { title, imageUrl, altImage, skills } = Astro.props;
---

<div class="card p-4 rounded-xl shadow-lg md:w-3/12">
  <div id="presentation" class="flex flex-col justify-center items-center">
    <img src={imageUrl} alt={altImage} class="w-48 mb-6" />
    <h1 class="text-2xl">{title}</h1>
  </div>
  <div id="about" class="hidden">
    <h1 class="text-2xl">{title}</h1>
    <ul id="skills">
      {skills.map((skill) => <li>{skill}</li>)}
    </ul>
  </div>
</div>

<style>
  .hidden {
    display: none;
  }
</style>
